@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UserActivitiesTestApp</title>
    <base href="~/" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/jquery-datetimepicker/jquery.datetimepicker.min.css" />
</head>
<body>
    <app>
        <div class="sidebar">
            <nav class="top-row pl-4 navbar navbar-dark">
                <a class="navbar-brand" href="">User Activities App</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </nav>
            @if (User.Identity.IsAuthenticated)
            {
                <div class="collapse navbar-collapse" id="collapsibleNavbar">
                    <ul class="navbar-nav">
                        <li class="nav-item px-3">
                            <a class="nav-link text-light" asp-area="" asp-controller="Activity" asp-action="AddActivity">Add Activity</a>
                        </li>
                        <li class="nav-item px-3">
                            <a class="nav-link text-light" asp-area="" asp-controller="Activity" asp-action="ActivityReport">Activity Report</a>
                        </li>
                        <li class="nav-item px-3">
                            <a class="nav-link text-light" asp-area="" asp-controller="Activity" asp-action="PrintReport">Print Report</a>
                        </li>                       
                    </ul>
                </div>
            }
        </div>

        <div class="main">
            <div class="top-row px-4 auth flex-row">
                <partial name="_LoginPartial" />
            </div>

            <div class="content px-4">
                @RenderBody()
            </div>
        </div>
    </app>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - UserActivitiesTestApp
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-datetimepicker/jquery.datetimepicker.full.js" type="text/javascript"></script>
    <script src="~/lib/moment.js/moment.js"></script>
    <script src="~/js/DateTimePickerReady.js" type="text/javascript"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>

